<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - InquireX</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("InquireX", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if ((string)Session["UserRole"] == "client")
                    {
                        <li>@Html.ActionLink("Raise Query", "CreateQuery", "Query")</li>
                        <li>@Html.ActionLink("All Queries", "AllQueries", "Query")</li>
                    }
                    @if ((string)Session["UserRole"] == "admin" || (string)Session["UserRole"] == "hr")
                    {
                        <li>@Html.ActionLink("Home", "Index", "User")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Project")</li>
                        <li>@Html.ActionLink("Raise Query", "CreateQuery", "Query")</li>
                        <li>@Html.ActionLink("Raise Query", "CreateQuery", "Query")</li>
                        <li>@Html.ActionLink("All Queries", "AllQueries", "Query")</li>
                    }
                    @if ((string)Session["UserRole"] == "developer")
                    {
                        <li>@Html.ActionLink("Projects", "Index", "Project")</li>
                        <li>@Html.ActionLink("All Queries", "AllQueries", "Query")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserEmail"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                        <li>@Html.ActionLink("Register", "Create", "User")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
